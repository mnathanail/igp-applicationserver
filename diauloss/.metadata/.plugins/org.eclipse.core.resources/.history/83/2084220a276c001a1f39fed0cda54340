package com.diaulos.igp.controller;

import java.util.Collection;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.diaulos.igp.model.Cert;
import com.diaulos.igp.service.CertService;


@RestController
@RequestMapping("/pistoi")
public class CertController {
	
	@Autowired
	private CertService certService;
	
	@RequestMapping(method = RequestMethod.GET)
	public Collection<Cert> getAllpistous(){
		return certService.getAllpistous();
	}
	
	
	@RequestMapping(value="/{id}", method = RequestMethod.GET)
	public Cert getPistosById(@PathVariable("id") int id) {
		return certService.getPistosById(id);
	}
	
	@RequestMapping(value="/{id}", method = RequestMethod.DELETE)
	public Cert deletePistosById(@PathVariable("id") int id) {
		return certService.deletePistosById(id);
	}
	
	
	@RequestMapping(method = RequestMethod.PUT, consumes = MediaType.APPLICATION_JSON_VALUE)
	public void updatePistos(@RequestBody Cert cert) {	
		certService.updatePistos(cert);
	}
	
	
	public void createPistos(Cert cert) {
		certService.createPistos(cert);
	}

}
